<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="16dp"
        android:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            android:contentDescription="ProfilePicture" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profileImage"
            android:layout_alignBottom="@id/profileImage"
            android:layout_marginStart="16dp"
            android:text="UserName"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/forwad"
            android:contentDescription="Exit Settings" />
    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollableContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@+id/bottomNavBar"
        android:fillViewport="true"
        android:background="#620DEA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <!-- Notifications Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="16dp"
                android:background="#620DEA">

                <TextView
                    android:id="@+id/notificationsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B0BEC5" />

            <!-- Notification Settings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#620DEA"
                android:padding="0dp">

                <!-- Pause All -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/pauseAllText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pause all notifications"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <CheckBox
                        android:id="@+id/pauseAllCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:buttonTint="@android:color/white" />
                </RelativeLayout>

                <!-- Pause Direct Messages -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/pauseDMText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pause direct message notifications"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <CheckBox
                        android:id="@+id/pauseDMCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:buttonTint="@android:color/white" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B0BEC5" />

            <!-- Appearances Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="16dp"
                android:background="#620DEA">

                <TextView
                    android:id="@+id/appearencesLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appearences"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B0BEC5" />

            <!-- Appearance Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#620DEA">

                <!-- Dark -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/darkText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dark"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <CheckBox
                        android:id="@+id/DarkCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:buttonTint="@android:color/white" />
                </RelativeLayout>

                <!-- Light -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/lightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Light"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <CheckBox
                        android:id="@+id/LightCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:buttonTint="@android:color/white" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B0BEC5" />

            <!-- Account Privacy Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="16dp"
                android:background="#620DEA">

                <TextView
                    android:id="@+id/PrivacyLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Privacy"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B0BEC5" />

            <!-- Account Privacy Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#620DEA">

                <!-- Public -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/publicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Public"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <CheckBox
                        android:id="@+id/PublicCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:buttonTint="@android:color/white" />
                </RelativeLayout>

                <!-- Private -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/privateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Private"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <CheckBox
                        android:id="@+id/PrivateCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:buttonTint="@android:color/white" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B0BEC5" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="?attr/colorPrimary"
        android:weightSum="50"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Home"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/bookmarkButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/bookmark"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Bookmarks"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/addPostButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add Post"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/inboxButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/inbox"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Inbox"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:scaleType="centerInside" />
    </LinearLayout>

</RelativeLayout>

